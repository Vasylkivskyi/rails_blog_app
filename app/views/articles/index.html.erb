<h1 class="mt-4 text-center">Listing all articles</h1>
<div class="container">
  <% @articles.each do |article_record| %>
  <div class="row justify-content-md-center">
    <div class="col-md-8 col-sm-12">
      <div class="card mt-1 shadow mb-5 bg-white rounded">
        <h5 class="card-header font-italic"><small>by Pavlo Vasylkivskyi</small></h5>
        <div class="card-body">
          <h5 class="card-title">
            <%= link_to article_record.title, article_path(article_record), class: "text-success"%>
          </h5>
          <p class="card-text"><%= truncate(article_record.description, length: 400)%></p>
          <%= link_to "Show", article_path(article_record), class: "btn btn-outline-success"%>
          <%= link_to "Edit", edit_article_path(article_record), class: "btn btn-outline-primary"%>
          <%=
                link_to "Delete",
                article_path(article_record),
                method: :delete,
                class: "btn btn-outline-danger",
                data: { confirm: "Are you sure?" }
              %>
        </div>
        <div class="card-footer text-muted">
          <small>
            Created
            <%= time_ago_in_words(article_record.created_at) %>
            ago
            <% if article_record.created_at != article_record.updated_at%>
            & edited
            <%= time_ago_in_words(article_record.updated_at) %>
            ago
            <% end %>
          </small>
        </div>
      </div>
    </div>
  </div>
  <% end %>
</div>