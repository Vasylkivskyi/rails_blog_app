<h1>Articles list</h1>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th colspan="3">Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @articles.each do |article_record| %>
    <tr>
      <td><%= article_record.title %></td>
      <td><%= article_record.description %></td>
      <td><%= link_to  "Edit", edit_article_path(article_record) %></td>
      <td><%= link_to  "Show", article_path(article_record) %></td>
      <td><%= link_to  "Delete", article_path(article_record), method: :delete, data: {confirm: "Are you sure?"} %></td>
    </tr>
    <% end %>
  </tbody>
</table>
<br />
