<div class="container">
  <div class="row justify-content-md-center">
    <%= render "shared/errors", obj: @user %>
    <%= form_with(model: @user, class: "col-md-8 col-sm-12 shadow mb-3 bg-white rounded p-4", local: true) do |f| %>
    <div class="form-group row">
      <%= f.label :user_name %>
      <%= f.text_field :user_name, class: "form-control" %>
    </div>
    <div class="form-group row">
      <%= f.label :email %>
      <%= f.email_field :email, class: "form-control" %>
    </div>
    <div class="form-group row">
      <%= f.label :password %>
      <%= f.password_field :password, class: "form-control" %>
    </div>
    <div class="form-group row">
      <%= f.submit(@user.new_record? ? "Sign up": "Save", class: "btn btn-success") %>
    </div>
  <% end %>
</div>
</div>