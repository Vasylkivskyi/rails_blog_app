<h1 class="text-center mt-4"><%= @user.user_name%></h1>
<%= gravatar_for(@user, size: 200) %>
<% if logged_in? && @user == current_user %>
  <div class="text-center mt-4 mb-4">
    <%= link_to "Edit your profile", edit_user_path(@user), class: "btn btn-success" %>
    <%= link_to "Delete your profile", user_path(@user), class: "btn btn-danger", method: :delete, data: { confirm: "Are you sure? ðŸ˜³"}%>
  </div>
<% end %>
<h3 class="text-center mt-4 mb-4">
  <%= pluralize @user.articles.count, "Article" %>
</h3>
<%= render 'articles/articles', articles: @articles %>
<%= will_paginate @articles %>
